@model List<ResultCustomerDto>
@{
    ViewData["Title"] = "Customer List";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
<style>
    body {
        font-family: 'Inter', sans-serif;
        background: #1e1e2f;
        color: #f0f0f0;
        padding: 40px;
    }

    .container {
        max-width: 1000px;
        margin: auto;
        background: #2a2a40;
        padding: 30px;
        border-radius: 20px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    }

    h2 {
        text-align: center;
        color: #90cdf4;
    }

    .top-actions {
        text-align: right;
        margin-bottom: 20px;
    }

    .btn-create {
        background: #4ade80;
        color: black;
        padding: 10px 16px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: bold;
    }

    table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
    }

    th, td {
        padding: 12px;
        border-bottom: 1px solid #444;
    }

    th {
        background-color: #3c3c55;
        color: #90cdf4;
    }

    tr:hover {
        background-color: #3b3b50;
    }

    .btn {
        padding: 6px 12px;
        border-radius: 6px;
        font-weight: 600;
        text-decoration: none;
        margin-right: 5px;
    }

    .btn-update {
        background-color: #38bdf8;
        color: white;
    }

    .btn-delete {
        background-color: #ef4444;
        color: white;
        border: none;
    }
</style>

<div class="container">
    <div class="top-actions">
        <a asp-action="CreateCustomer" asp-controller="Customer" class="btn-create">+ Add New</a>
    </div>
    <h2>Customer List</h2>

    @if (Model != null && Model.Any())
    {
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Balance</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CustomerId</td>
                        <td>@item.CustomerName</td>
                        <td>@item.CustomerSurname</td>
                        <td>@item.CustomerBalance ₺</td>
                        <td>
                            <a asp-action="UpdateCustomer" asp-controller="Customer" asp-route-id="@item.CustomerId" class="btn btn-update">Update</a>
                            <form asp-action="DeleteCustomer" asp-controller="Customer" asp-route-id="@item.CustomerId" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-delete" onclick="return confirm('Delete this customer?');">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No customers found.</p>
    }
</div>
