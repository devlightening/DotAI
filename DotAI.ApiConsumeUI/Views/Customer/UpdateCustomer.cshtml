@model DotAI.ApiConsumeUI.Dtos.UpdateCustomerDto
@{
    ViewData["Title"] = "Update Customer";
}

<style>
    body {
        font-family: 'Inter', sans-serif;
        background-color: #1e1e2f;
        color: #fff;
        padding: 40px;
    }

    .form-container {
        background: #2a2a40;
        padding: 30px;
        border-radius: 20px;
        max-width: 500px;
        margin: auto;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    }

    h2 {
        text-align: center;
        color: #90cdf4;
    }

    label {
        display: block;
        margin-top: 15px;
    }

    input {
        width: 100%;
        padding: 10px;
        margin-top: 5px;
        background: #3b3b50;
        border: none;
        border-radius: 10px;
        color: white;
    }

    .buttons {
        display: flex;
        justify-content: space-between;
        gap: 10px;
        margin-top: 20px;
    }

    .btn {
        padding: 10px;
        border: none;
        border-radius: 10px;
        font-weight: bold;
        cursor: pointer;
        flex: 1;
        text-align: center;
        color: white;
    }

    .btn-save {
        background-color: #38bdf8;
    }

    .btn-cancel {
        background-color: #ef4444;
        text-decoration: none;
        display: inline-block;
        line-height: 40px;
    }
</style>

<div class="form-container">
    <h2>Update Customer</h2>

    <form asp-action="UpdateCustomer" asp-controller="Customer" method="post">
        <input asp-for="CustomerId" type="hidden" />

        <label asp-for="CustomerName">Name</label>
        <input asp-for="CustomerName" type="text" required />

        <label asp-for="CustomerSurname">Surname</label>
        <input asp-for="CustomerSurname" type="text" required />

        <label asp-for="CustomerBalance">Balance</label>
        <input asp-for="CustomerBalance" type="number" step="0.01" required />

        <div class="buttons">
            <button type="submit" class="btn btn-save">Save</button>
            <a asp-action="CustomerList" asp-controller="Customer" class="btn btn-cancel">Cancel</a>
        </div>
    </form>
</div>
