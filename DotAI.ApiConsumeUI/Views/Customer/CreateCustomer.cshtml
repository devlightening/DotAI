@model DotAI.ApiConsumeUI.Dtos.CreateCustomerDto
@{
    ViewData["Title"] = "Create Customer";
}

<style>
    body {
        font-family: 'Inter', sans-serif;
        background-color: #1e1e2f;
        color: #fff;
        padding: 40px;
    }

    .form-container {
        background: #2a2a40;
        padding: 30px;
        border-radius: 20px;
        max-width: 500px;
        margin: auto;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    }

    h2 {
        text-align: center;
        color: #90cdf4;
    }

    label {
        display: block;
        margin-top: 15px;
    }

    input {
        width: 100%;
        padding: 10px;
        margin-top: 5px;
        background: #3b3b50;
        border: none;
        border-radius: 10px;
        color: white;
    }

    button {
        width: 100%;
        padding: 12px;
        margin-top: 20px;
        background-color: #3b82f6;
        border: none;
        border-radius: 10px;
        color: white;
        font-weight: bold;
        cursor: pointer;
    }

    a {
        display: block;
        text-align: center;
        margin-top: 15px;
        color: #90cdf4;
        text-decoration: none;
    }
</style>

<div class="form-container">
    <h2>Create Customer</h2>

    <form asp-action="CreateCustomer" asp-controller="Customer" method="post">
        <label asp-for="CustomerName">Name</label>
        <input asp-for="CustomerName" type="text" required />

        <label asp-for="CustomerSurname">Surname</label>
        <input asp-for="CustomerSurname" type="text" required />

        <label asp-for="CustomerBalance">Balance</label>
        <input asp-for="CustomerBalance" type="number" step="0.01" required />

        <button type="submit">Save</button>
    </form>

    <a asp-action="CustomerList" asp-controller="Customer">← Back to List</a>
</div>
